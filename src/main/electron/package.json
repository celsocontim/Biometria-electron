{
  "name": "demo-app",
  "version": "0.3.4",
  "main": "main.js",
  "description": "Aplicacao de biometria digital Unimed-BH",
  "author": "Celso Contim & Ednilson Monteiro",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "npm install && electron ./app",
    "pack": "electron-builder --dir",
    "dist": "node build-config.js",
    "publish": "node publish.js"
  },
  "devDependencies": {
    "electron": "^31.0.1",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "electron-updater": "^6.2.1",
    "minimal-request-promise": "^1.5.0",
    "tree-kill": "^1.2.2",
  },
  "build": {
    "extraResources": [
      {
        "from": "resources",
        "to": "../resources"
      }
    ],
    "appId": "demo-app",
    "productName": "demo-app-teste",
    "copyright": "Copyright Â© 2024 Jovem Fla",
    "forceCodeSigning": true,
    "directories": {
      "output": "dist",
      "buildResources": "resources"
    },
    "win": {
      "target": "nsis",
      "icon": "resources/icon.ico",
      "publish": [
        {
          "provider": "github",
          "owner": "celsocontim",
          "repo": "Biometria-electron",
          "releaseType": "release",
          "private": true
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "resources/icon.ico",
      "installerHeaderIcon": "resources/icon.ico",
      "uninstallerIcon": "resources/icon.ico",
      "deleteAppDataOnUninstall": true
    }
  }
}
